#ifndef BUFFERS_ROLLINGBUFFER_HPP_
#define BUFFERS_ROLLINGBUFFER_HPP_

namespace Buffers {

template<int size>
class AutoBuffer {
private:
	unsigned char data[size];
	const int length;

public:
	AutoBuffer();
	unsigned char* GetData();
	int GetSize();
};

template<int size>
class BaseBuffer {
private:
	unsigned char *data;
	const int length;

public:
	BaseBuffer(unsigned char *array, const int length);
	unsigned char* GetData();
	int GetSize();
};

class RollingBuffer {
public:
	RollingBuffer(BaseBuffer base);
};

} /* namespace Buffers */

#endif /* BUFFERS_ROLLINGBUFFER_HPP_ */
