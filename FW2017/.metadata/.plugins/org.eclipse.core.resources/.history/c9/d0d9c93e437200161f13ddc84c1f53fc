//*****************************************************************************
//
// MSP432 main.c template - Empty main
//
//****************************************************************************

#include "msp.h"

#include "timer.hpp"

using namespace Peripherials;

void main(void) {

	WDTCTL = WDTPW | WDTHOLD;           // Stop watchdog timer

	P2->DIR = 0x07;
	P2->OUT = 0x07;
	TA0.SetPeriod(20f / 1000);
	TA0.StartPWM(CC0, 1.5f/1000);
	while (true) {
		__delay_cycles(100000);
		P2->OUT = 0x00;
		__delay_cycles(1000000);
		P2->OUT = 0x07;
	}
}
