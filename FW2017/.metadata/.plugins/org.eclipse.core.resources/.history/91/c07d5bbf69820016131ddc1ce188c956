#ifndef BUFFERS_ROLLINGBUFFER_HPP_
#define BUFFERS_ROLLINGBUFFER_HPP_

namespace Buffers {

template<int size>
class BaseBuffer {
private:
	unsigned char data[size] const;
	int size = size;

public:
	unsigned char* GetData();
	unsigned char* GetSize();
};

class RollingBuffer {
public:
	RollingBuffer();
};

} /* namespace Buffers */

#endif /* BUFFERS_ROLLINGBUFFER_HPP_ */
