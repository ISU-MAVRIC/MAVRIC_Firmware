#ifndef BUFFERS_ROLLINGBUFFER_HPP_
#define BUFFERS_ROLLINGBUFFER_HPP_

namespace Buffers {

template<int size>
class AutoBuffer {
private:
	unsigned char _data[size];
	const int _length;

public:
	AutoBuffer() {
		_length = size;
	}
	unsigned char* GetData();
	int GetSize();
};

class BaseBuffer {
private:
	unsigned char *_data;
	const int _length;

public:
	BaseBuffer(unsigned char *array, const int size);
	unsigned char* GetData();
	int GetSize();
};

class RollingBuffer {
public:
	RollingBuffer(BaseBuffer base);
};

} /* namespace Buffers */

#endif /* BUFFERS_ROLLINGBUFFER_HPP_ */
