#include "uart.hpp"

namespace Peripherials
{
	UART::UART(EUSCI_A_Type& instance, int baud) : regs(instance)
	{
		regs.CTLW0 = UCPEN | UCPAR | UCMSB | UCSSEL__SMCLK | UCSWSRT;
		regs.BRW = fSMCLK/baud;
	}

	UART::Send(char c)
	{
		regs.TXBUF = c;
	}
}
