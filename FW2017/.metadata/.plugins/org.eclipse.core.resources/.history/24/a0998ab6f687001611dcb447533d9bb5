#ifndef PROTOCOL_PROTOCOLDATA_H_
#define PROTOCOL_PROTOCOLDATA_H_

/* typedef'd in case we want to change it later */
typedef signed char WheelSpeed;

typedef struct
{
	signed char mastTilt;
	signed char mastPan;
	signed char zoomCtl;

	unsigned char camSel;

} CameraControl;

typedef struct
{
	unsigned char arm    : 1;
	unsigned char wheels : 1;
	unsigned char soil   : 1;

} HW_Modules;

typedef struct
{
	/* wheels */
	union
	{
		WheelSpeed wheels[2];
		struct
		{
			WheelSpeed lWheel;
			WheelSpeed rWheel;
		};
	};

	CameraControl camera;


} IncomingData;

#endif /* PROTOCOL_PROTOCOLDATA_H_ */
