#ifndef PROTOCOL_PROTOCOLDATA_H_
#define PROTOCOL_PROTOCOLDATA_H_

typedef signed char WheelSpeed;
typedef struct
{
	signed char mastTilt;
	signed char mastPan;
	signed char zoomCtl;


} CameraControl;

typedef struct IncomingData
{
	/* wheels */
	union
	{
		WheelSpeed wheels[2];
		struct
		{
			WheelSpeed lWheel;
			WheelSpeed rWheel;
		};
	};

	CameraControl camera;

} IncomingData;

#endif /* PROTOCOL_PROTOCOLDATA_H_ */
